<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_wheel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_msg"
        wheel:matProg_barColor="@color/colorPrimary"
        wheel:matProg_barWidth="2dp"
        android:visibility="gone"
        wheel:matProg_progressIndeterminate="false"
        wheel:matProg_rimColor="@color/colorPrimary"
        wheel:matProg_rimWidth="2dp"
        wheel:matProg_spinSpeed="0.64" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="已经全部加载完毕"
        android:textColor="@color/tv_dark"
        android:textSize="14sp" />
</RelativeLayout>