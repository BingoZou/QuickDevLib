<?xml version="1.0" encoding="utf-8"?>
<me.solidev.library.widget.StatusViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.solidev.library.widget.pulltorefresh.PullToRefresh
        android:id="@+id/ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager" />
    </me.solidev.library.widget.pulltorefresh.PullToRefresh>

</me.solidev.library.widget.StatusViewLayout>